<% provide(:title,"User Login") %>
<div class="row justify-content-center text-center">
  <div class="col-sm-4">
    <%= bootstrap_form_with(class: 'form-signin', url: user_login_path, scope: :session, local: true) do |f| %>
      <h2 class="h2 mb-4 font-weight-normal">Log in</h2>

      <%= f.text_field :username, class:"form-control" %>
      <%= f.password_field :password, class:"form-control" %>
      <%= f.submit "Sign in", class: 'btn btn-primary' %>
      
    <% end %>
    <br>
    <%= link_to "Sign Up", user_verify_path , class: "btn btn-primary" %>
  </div>
</div>
