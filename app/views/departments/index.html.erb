

<head>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


</head>
<body>
<% provide(:title,"Departments") %>
  <div class="message-box box-large">
    <div class="container">
      <div class="row">
        <h2 class="pr-2 pr-sm-2 pr-md-2 pr-lg-2">Departments</h2>
      </div>
      <div class="row pb-3">
        <%= link_to("New department", new_department_path, :method => "get", :class => "btn btn-outline-dark action new") %>
      </div>
      <div class="row pb-3">


      </div>


      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Name</th>

          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
          <div class ="row">
            <tr style="transform: rotate(0);">
              <th id="row_number" scope="row"> <%= department.created_at%> </th>
              <td>

                <%= department.name %>

              </td>


              <td scope="row" >

                <%= link_to(department_path(department), class: "stretched-link action show")do %>
                <span data-toggle="tooltip" data-placement="top" title="Show">
                  <i class="fas fa-search"></i>
                </span>
                <%end %>

                <%= link_to(edit_department_path(department), :class => "action edit icon-position") do %>
                <span data-toggle="tooltip" data-placement="top" title="Edit">
                  <i class="far fa-edit"></i>
                </span>
                <% end %>
                <%= link_to(delete_department_path(department), :class => "action delete icon-position") do %>
                <span data-toggle="tooltip" data-placement="top" title="Delete">
                  <i class="far fa-trash-alt"></i>
                </span>
                <% end %>




              </td>
            </tr>
          </div>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
   </div>

   </body>
