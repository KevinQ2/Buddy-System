<% provide(:title,"Delete Scheme") %>

  <div class="container">
    <div class="row justify-content-center align-items-center">
      <h2>Delete scheme</h2>
    </div>

    <hr class="solid">
    <div class="container px-lg-2 pt-2">
      <%= render(:partial => 'show_scheme_details', :locals => {:scheme => @scheme}) %>

      <p class="text-danger pt-2" align="center">Warning: This action cannot be undone!</p>
      <div class="row justify-content-center align-items-center">
        <div class="form-buttons p-2" align ="center">
          <%= form_for(@scheme, :method => 'delete') do |f| %>
          <%= f.submit "Delete scheme", class:'btn btn-danger'%>
        </div>

        <div class="form-buttons p-2" align ="center">
          <%= link_to("Cancel", scheme_path, :class => "btn btn-secondary") %>
          <% end %>
        </div>
      </div>

      </div>
    </div>
