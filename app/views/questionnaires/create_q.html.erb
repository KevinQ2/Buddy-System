      </div>
    </div>

    <div class="row pb-1">
      <div class="col-sm-3">
        Receiver Account Number:
      </div>
      <div class="col">
        <%= f.text_field(:account_number, required: true) %>
      </div>
    </div>


  </div>
</div>
